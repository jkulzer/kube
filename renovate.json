{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"kubernetes": {
		"managerFilePatterns": [
			"/clusters/.+\\.yaml$/"
		]
	},
	"packageRules": [
		{
			"matchUpdateTypes": [
				"patch"
			],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		}
	],
	"branchConcurrentLimit": 25
}
